<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <TextView
                android:id="@+id/tv_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Menù"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#090909"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_primo_ord_pren"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Primo"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#0A0A0A"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_primo_uno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Lasagne"
                android:textColor="#FDFDFE"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_descrizione_primouno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\t\t Lasagne alla bolognese con ragù "
                android:textColor="#0A0A0A" />

            <TextView
                android:id="@+id/tv_primo_due"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Tagliolini allo scoglio"
                android:textColor="#FDFDFE"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_descrizione_primodue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\t\t Pasta con pesce fresco di giornata "
                android:textColor="#090909" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_secondo_ord_pren"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Secondo"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#0A0A0A"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_secondo_uno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Cotoletta"
                android:textColor="#FDFDFE"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_descrizione_secondouno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\t\t Cotoletta alla milanese classica"
                android:textColor="#090909" />

            <TextView
                android:id="@+id/tv_secondo_due"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Sogliola impanata"
                android:textColor="#FDFDFE"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_descrizione_secondodue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\t\t Sogliola pescata in giornata impanata"
                android:textColor="#090909" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_contorno_ord_pren"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contorno"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#090909"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_contorno_uno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Patatine fritte"
                android:textColor="#FDFDFE"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_descrizione_contornouno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\t\t Patatine fritte"
                android:textColor="#0A0A0A" />

            <TextView
                android:id="@+id/tv_contorno_due"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Insalata"
                android:textColor="#FDFDFE"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_descrizione_contornodue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\t\t Insalata mista condita"
                android:textColor="#0A0A0A" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ordinazione"
                android:textColor="#080808"
                android:textSize="32sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_nome_ord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/nome"
                    android:textColor="#0A0A0A"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_nome_ord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background_normal"
                    android:ems="10"
                    android:hint="@string/nome"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_ora_ord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Ora"
                    android:textColor="#090909"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_ora_ord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background_normal"
                    android:ems="10"
                    android:hint="Ora"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_primo_ord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Primo"
                    android:textAlignment="center"
                    android:textColor="#0A0A0A"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_primo_ord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background_normal"
                    android:ems="10"
                    android:hint="Primo"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_secondo_ord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Secondo"
                    android:textAlignment="center"
                    android:textColor="#090909"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_secondo_ord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background_normal"
                    android:ems="10"
                    android:hint="Secondo"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_contorno_ord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Contorno"
                    android:textAlignment="center"
                    android:textColor="#0A0A0A"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_contorno_ord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background_normal"
                    android:ems="10"
                    android:hint="Contorno"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="send"
                android:text="Ordina" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>